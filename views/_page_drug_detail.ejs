<div id="drugdetailcontainer" class="mt-5 px-5 me-auto">
    <div class="d-flex flex-row justify-content-between">
        <% if(typeof detailOf.name!=='undefined' ){%>
            <%if(details.length>0){%> <span style="font-family: Garamond;font-style: italic;" class="px-3 rounded-3 border-1 border-success border-bottom text-dark text-sm text-start d-block">
                    Available Variants (<%=details.length%>) </span>
                <%} if(details.length==0){%> <span class="d-block bg-secondary px-1 pt-1 bg-opacity-10 text-dark text-center rounded ">No Variants
                        Found For <%=detailOf.name%></span>
                    <%} %>
                        <span id="msgdetail">
                            <%=msgdetail%> ?
                        </span>
                        <button onclick="show_add_drug_detail(`<%=detailOf.name%>`,`<%=detailOf.id%>`)" id="id-drug-add" class="px-1 btn-sm bg-primary bg-opacity-10 rounded-2   btn"><i
                                class="fa fa-plus-square"></i>
                        </button>
                        <%}%>
    </div>
    <% if(typeof detailOf.name!=='undefined' && details.length>0){%>
        <table style="width: 100%; font-size: 11px;" class="mt-3 rounded-3 ">
            <thead class="rounded-pill">
                <tr class="b ">
                    <th scope="col ">#</th>
                    <th scope="col">Drug Name</th>
                    <th scope="col ">Formulation</th>
                    <th scope="col ">Strength</th>
                    <th scope="col ">Edit</th>
                    <th scope="col ">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0;i<details.length;i++) { %>
                    <tr>
                        <th scope="row ">
                            <%=i+1%>
                        </th>
                        <td>
                            <%=detailOf.name%>
                        </td>
                        <td>
                            <%=details[i].frmname%>
                        </td>
                        <td>
                            <%=details[i].strength %>
                        </td>
                        <td>
                            <button onclick="show_edit_drug_detail(`<%=details[i].id%>`)" class="btn btn-sm btn-outline-secondary " style="font-size: 10px; ">
                                <i class="fas fa-pen "></i></button>
                        </td>
                        <td>
                            <button onclick="show_delete_drug_detail(`<%=details[i].id%>`,`<%=detailOf.id%>`)" class="btn btn-sm btn-outline-danger " style="font-size: 10px; "> <i
                                    class="fas fa-trash "></i></button>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <%} %>
</div>