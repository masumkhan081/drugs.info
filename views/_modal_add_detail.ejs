<div id="add-detail-modal" class="modal mt-5 rounded">
    <div class="modal-dialog " role="document ">
        <div class="modal-content ">
            <div class="modal-header">
                <span id="add_detail_name" class="text-lg-start bg-success bg-opacity-10"></span>
                <button class="btn btn-danger" onclick="document.getElementById( 'add-detail-modal').style.display='none' ">
                    <i class="fa fa-times-square " aria-hidden="true "></i>
                </button>
            </div>
            <div class="modal-body pb-4 bg-light">
                <form action="/drugs/detail" method="post">
                    <input type="text" name="drg_id" id="detaildrugid" value="<%=detailOf.id%>" />
                    <!--  -->
                    <div class="form-group row mb-3">
                        <label for="add_detail_frm" class="form-label text-start">Type:</label>
                        <div class="col-sm-9">
                            <select id="add_detail_frm" name="frm_id" required class="form-control rounded ">
                                <option value="" disabled selected>Select a type</option>
                                <%formulations.forEach(frm=> {%> <option value="<%=frm.id%>">
                                        <%=frm.name%>
                                    </option>
                                    <% });%>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="strength" class="form-label text-start">Strength:</label>
                        <div class="col-sm-9">
                            <input type="text text-sm" name="strength" value="500 mg" class=" form-control text-center mb-3" required placeholder="Strength">
                        </div>
                    </div>
                    <button type="submit" class="d-block btn btn-sm btn-outline-info text-dark w-50 rounded text-center float-start">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>