<div style="min-height: 300px;">
    <div class="row mt-5  ">
        <div class="col-11 col-md-5 col-sm-8 mx-auto shadow-sm rounded-3  ">
            <form action="/users/signin" method="POST">
                <div class=" form-group my-3  ">
                    <label for=" email " class=" float-start ">Email</label>
                    <input type="email" name="email" required id="email" class=" form-control text-center "
                        placeholder=" Enter email " value=" masumkhan.medilifesolution@gmail.com " />
                </div>
                <div class=" form-group mb-2  ">
                    <label for=" password " class=" float-start  ">Password</label> <input type=" password "
                        name="password" required class=" form-control text-center " placeholder=" Password ? "
                        value=" <%=typeof password !='undefined' ? password : '123456'%>" />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class=" mt-3 btn bg-success bg-opacity-50 rounded w-50"> Login </button>
                    <strong class=" mt-4 ms-1 ms-sm-3">No Account? <a href="/users/register"
                            class="text-decoration-none text-primary">Sign Up</a></strong>
                </div>
                <span class="d-block text-start my-2 text-danger">
                    <%= msg %>
                </span>
            </form>
        </div>
        <script>
            setTimeout(() => {
                const idmsg = "the_delivery_guy";
                document.getElementById(idmsg).innerHTML = " "
            }, 3000)
        </script>
    </div>
</div>
