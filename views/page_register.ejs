<div style="min-height: 500px;">
    <div class="container row mt-4  d-flex justify-content-around">
        <div class=" col-md-5 col-sm-8 col-11 m-auto rounded pb-2 ">
            <span class="badge mark d-block text-center mb-2 text-muted rounded">User Registration</span>
            <%if(typeof errors !=='undefined' ){%>
                <ul class="list-unstyled text-end">
                    <%errors.map(err=>{%> <li class="text-danger">
                            <%=err%>
                        </li>
                        <%})%>
                </ul>
                <%}%>
                    <form action="/register" method="POST" class="pt-2">
                        <div class="form-group text-start mb-3">
                            <label for="name">Full Name</label>
                            <input type="name" name="name" required class="form-control text-center"
                                placeholder="Your Name"
                                value="<%= typeof name != 'undefined' ? name : 'masumkhan' %>" />
                        </div>
                        <div class="form-group text-start mb-3">
                            <label for="email">Email masum498673 masumkhan081</label>
                            <input type="email" name="email" required class="form-control text-center"
                                placeholder="Enter Email" value="masumkhan.medilifesolution@gmail.com" />
                        </div>
                        <div class="form-group text-start mb-3">
                            <label for="password ">Password</label>
                            <input type="password " name="password" required class="form-control text-center"
                                placeholder="Password ?"
                                value="<%= typeof password != 'undefined' ? password : '123456' %>" />
                        </div>
                        <div class="form-group text-start mb-3">
                            <label for="confirmpassword ">Confirm Password</label>
                            <input type="password " name="confirmpassword" required class="form-control text-center"
                                placeholder="Password again ... "
                                value="<%= typeof password2 != 'undefined' ? password2 : '123456' %>" />
                        </div>
                        <button type="submit "
                            class="btn btn-sm fw-bold bg-success bg-opacity-50 mt-2 rounded w-50 float-end"> Register
                        </button>
                    </form>
                    <strong class="mt-3 float-start">Have An Account? <a href="/signin"
                            class="text-decoration-none text-danger">Login</a></strong>
        </div>
        <div class="col-md-4 pb-4 col-sm-6 rounded-3 ">
            <span class=" text-center d-block "> Or, Quick Sign Up With: </span>
            <div class="py-4 d-flex flex-column justify-content-start align-items-center gap-3 h-100">
                <a href="auth/linkedin" class="fw-bold btn btn-sm w-75 bg-success bg-opacity-10 shadow-sm rounded-3"><i
                        class="fa-brands fa-linkedin"></i> Linkdin </a>
                <a href="/auth/google" class="fw-bold btn btn-sm w-75 bg-light bg-opacity-50 shadow-sm"> <i
                        class="fa-brands fa-google text-success"></i> Google</a>
                <a href="/auth/facebook" class="fw-bold w-75 bg-info shadow bg-opacity-10 btn btn-sm shadow-sm"> <i
                        class="fa-brands fa-facebook text-primary"></i> Facebook </a>
                <a href="/auth/github" class="fw-bold w-75 bg-secondary bg-opacity-10 shadow btn btn-sm shadow-sm"> <i
                        class="fa-brands fa-github "></i> Github </a>
            </div>
        </div>
    </div>
</div>
